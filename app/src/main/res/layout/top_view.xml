<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView 
            android:id="@+id/text_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="12.5dp"
            android:layout_height="wrap_content"
            android:text="工时类型"/>
        <TextView 
            android:id="@+id/text_zhijie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_qa_cat_selector"
            android:textColor="@drawable/textcolor_qa_cat"
            android:text="直接"/>
        <TextView 
            android:id="@+id/text_jianjie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.5dp"
            android:layout_marginRight="12.5dp"
            android:background="@drawable/btn_qa_cat_selector"
            android:textColor="@drawable/textcolor_qa_cat"
            android:text="间接"/>
    </LinearLayout>
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="1px"
	    android:background="#dcdcdc"/>
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView 
            android:id="@+id/text_key1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="12.5dp"
            android:layout_height="wrap_content"
            android:text="项目名称"/>
        <TextView 
            android:id="@+id/text_value1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="12" 
            android:singleLine="true"
            android:ellipsize="end"
            android:hint="请选择项目名称"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/enter"
            android:layout_marginLeft="12.5dp"
            android:layout_marginRight="12.5dp"/>
    </LinearLayout>
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="1px"
	    android:background="#dcdcdc"/>
	<LinearLayout 
	     android:id="@+id/layout_item2"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView 
            android:id="@+id/text_key2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="12.5dp"
            android:layout_height="wrap_content"
            android:text="阶段"/>
        <TextView 
            android:id="@+id/text_value2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请选择阶段"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/enter"
            android:layout_marginLeft="12.5dp"
            android:layout_marginRight="12.5dp"/>
    </LinearLayout>
	<View 
	    android:id="@+id/line_jieduan"
	    android:layout_width="fill_parent"
	    android:layout_height="1px"
	    android:background="#dcdcdc"/>
	<LinearLayout 
	    android:id="@+id/layout_item3"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView 
            android:id="@+id/text_key3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="12.5dp"
            android:layout_height="wrap_content"
            android:text="专业"/>
        <TextView 
            android:id="@+id/text_value3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请选择专业"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/enter"
            android:layout_marginLeft="12.5dp"
            android:layout_marginRight="12.5dp"/>
    </LinearLayout>
	<View 
	    android:id="@+id/line_zhuanye"
	    android:layout_width="fill_parent"
	    android:layout_height="1px"
	    android:background="#dcdcdc"/>
	<LinearLayout 
	    android:id="@+id/layout_item4"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView 
            android:id="@+id/text_key4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="12.5dp"
            android:layout_height="wrap_content"
            android:text="内容"/>
        <TextView 
            android:id="@+id/text_value4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请选择分类"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/enter"
            android:layout_marginLeft="12.5dp"
            android:layout_marginRight="12.5dp"/>
    </LinearLayout>
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="1px"
	    android:background="#dcdcdc"/>
	
</LinearLayout>
