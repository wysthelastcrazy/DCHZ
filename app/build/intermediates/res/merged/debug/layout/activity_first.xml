<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_grey" >

    <LinearLayout
        android:id="@+id/layout_myfocus"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn"
        android:gravity="center"
        android:padding="2px" >

        <TextView
            android:id="@+id/textView_daiBan"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_myfocus"
            android:gravity="center"
            android:text="待办事务"
            android:textColor="@drawable/textcolor_main"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_yiBan"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_myfocus"
            android:gravity="center"
            android:text="已办事务"
            android:textColor="@drawable/textcolor_main"
            android:textSize="12sp" />
    </LinearLayout>
    <com.DCHZ.TYLINCN.msglist.MsgPage 
        android:id="@+id/first_msgPage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="11.5dp"
        android:layout_below="@id/layout_myfocus"
        ></com.DCHZ.TYLINCN.msglist.MsgPage>
</RelativeLayout>